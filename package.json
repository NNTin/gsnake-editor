{
  "name": "gsnake-editor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:editor\" \"npm run dev:server\"",
    "dev:editor": "vite",
    "dev:server": "tsx server.ts",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json",
    "server": "tsx server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.3.1",
    "@tsconfig/svelte": "^5.0.6",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^4.0.18",
    "concurrently": "^9.2.1",
    "happy-dom": "^20.4.0",
    "jsdom": "^27.4.0",
    "supertest": "^7.2.2",
    "svelte": "^5.43.8",
    "svelte-check": "^4.3.4",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "svelte-5-french-toast": "^2.0.6"
  }
}
